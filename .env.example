# Claude Desktop Bridge - Environment Configuration
# Copy this file to .env and fill in your actual values

# Mattermost Configuration
# Get these values from your Mattermost server settings
MATTERMOST_URL=https://your-mattermost-instance.com
MATTERMOST_BOT_TOKEN=your_bot_token_here
MATTERMOST_BOT_USER_ID=your_bot_user_id_here
MATTERMOST_TEAM_ID=your_team_id_here

# Optional: Custom mention patterns (comma-separated)
MATTERMOST_MENTION_PATTERNS=@claude,@bot

# Optional: Claude API URL (defaults to localhost:3000)
CLAUDE_API_URL=http://localhost:3000

# Optional: Server Configuration  
WEBHOOK_SERVER_PORT=3000
MONITORING_INTERVAL=2
MAX_RESPONSE_WAIT=30

# Optional: Display setting for Linux
DISPLAY=:1
